<p id="notice"><%= notice %></p>

<h1>Experience Skills</h1>

<table>
  <thead>
    <tr>
      <th>Experience</th>
      <th>Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experience_skills.each do |experience_skill| %>
      <tr>
        <td><%= experience_skill.experience %></td>
        <td><%= experience_skill.skill %></td>
        <td><%= link_to 'Show', experience_skill %></td>
        <td><%= link_to 'Edit', edit_experience_skill_path(experience_skill) %></td>
        <td><%= link_to 'Destroy', experience_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

