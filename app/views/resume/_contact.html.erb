<!-- CONTACT -->
<div class="box clearfix">
  <h2>Contact</h2>
  <% if @general_infos.linkedin.present? %>
      <div class="contact-item">
        <div class="icon pull-left text-center"><span class=""><img style="width: 30px;" src="<%= @base_url + "/assets/linkedin.png" %>"</span></div>
        <div class="title pull-right">LinkedIn</div>
        <div class="description pull-right"><%= link_to @general_infos.linkedin, @general_infos.linkedin %></div>
      </div>
  <% end %>

  <% if @general_infos.github.present? %>
      <div class="contact-item">
        <div class="icon pull-left text-center"><span><img style="width: 30px;" src="<%= @base_url + "/assets/github.png" %>" /></span></div>
        <div class="title pull-right">Github</div>
        <div class="description pull-right">
          <%= link_to @general_infos.github, @general_infos.github %><br />
          Note that the source code of this cv is available <%= link_to "here", "https://github.com/martinlevesque/resume_app" %> :-).
        </div>
      </div>
  <% end %>
</div>